{
  "name": "K-Tab",
  "description": "Adds choices to open Kentico CMS Desk or Site Manager in tab's context menu.",
  "version": "1",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["ktab.js"]
  },
  "content_scripts": [
      {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["inject.js"]
      }
  ]
