{
  "name": "K-Tab",
  "description": "Creates keyboard shortcuts to open  CMS Desk and CMS Site Manager for Kentico CMS",
  "version": "1",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
      "cmsdesk": {
          "suggested_key": { "default": "Ctrl+9" },
          "description": "Open CMS Desk"
      },
      "cmssitemanager": {
          "suggested_key": { "default": "Ctrl+0" },
          "description": "Open CMS Site Manager"
      }
  }
}